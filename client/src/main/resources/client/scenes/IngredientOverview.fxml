<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.IngredientOverviewCtrl">
   <children>
      <Label fx:id="titleLabel" text="Review Ingredients">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="instructionLabel" text="Adjust names and amounts directly in the table." />
      <TableView fx:id="ingredientsTable" editable="true" prefHeight="300.0" prefWidth="580.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Ingredient" />
          <TableColumn fx:id="amountColumn" prefWidth="150.0" text="Amount" />
          <TableColumn fx:id="sourceColumn" prefWidth="150.0" text="Source Recipe" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#addItem" text="Add Item" />
            <Button fx:id="removeItemButton" mnemonicParsing="false" onAction="#removeItem" text="Remove Item" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirm" text="Add to Shopping List" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
