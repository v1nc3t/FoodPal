<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane hgap="15.0" prefHeight="280.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AddIngredientCtrl">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
       <Label fx:id="nameLabel" text="${controller.nameProperty}" wrapText="true" />
       <Label fx:id="amountLabel" text="${controller.amountProperty}" wrapText="true" GridPane.rowIndex="1" />
       <Label fx:id="proteinLabel" text="${controller.proteinProperty}" wrapText="true" GridPane.rowIndex="2" />
       <Label fx:id="fatLabel" text="${controller.fatProperty}" wrapText="true" GridPane.rowIndex="3" />
       <Label fx:id="carbsLabel" text="${controller.carbsProperty}" wrapText="true" GridPane.rowIndex="4" />
       <TextField fx:id="nameField" prefWidth="250.0" promptText="${controller.enterIngredientNameProperty}" GridPane.columnIndex="1" />
      <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
             <TextField fx:id="amountField" promptText="${controller.amountIngredientProperty}" />
             <ComboBox fx:id="unitComboBox" editable="true" promptText="${controller.selectUnitProperty}" />
         </children>
      </HBox>
       <TextField fx:id="proteinField" prefWidth="142.0" promptText="${controller.gramsProteinProperty}" GridPane.columnIndex="1" GridPane.rowIndex="2" />
       <TextField fx:id="fatField" prefWidth="142.0" promptText="${controller.gramsFatProperty}" GridPane.columnIndex="1" GridPane.rowIndex="3" />
       <TextField fx:id="carbsField" prefWidth="142.0" promptText="${controller.gramsCarbsProperty}" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <children>
             <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#clickCancel" text="${controller.cancelProperty}" />
             <Button fx:id="doneButton" mnemonicParsing="false" onAction="#clickDone" text="${controller.doneProperty}" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</GridPane>
