    <Label fx:id="nameLabel" layoutX="26.0" layoutY="14.0" text="Name" />
    <TextField fx:id="nameField" layoutX="108.0" layoutY="10.0" prefHeight="25.0" prefWidth="240.0" promptText="Recipe name" />
