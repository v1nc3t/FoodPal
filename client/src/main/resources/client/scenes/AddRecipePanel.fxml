   <ScrollPane fx:id="preparationScrollPane" hbarPolicy="NEVER" layoutX="108.0" layoutY="212.0" prefHeight="90.0" prefWidth="275.0" style="-fx-border-color: black; -fx-border-width: 0.5;" vbarPolicy="NEVER">
