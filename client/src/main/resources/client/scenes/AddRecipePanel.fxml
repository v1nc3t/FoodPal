<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AddRecipeCtrl">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
             <Label fx:id="nameLabel" text="${controller.nameProperty}" />
             <TextField fx:id="nameField" promptText="${controller.recipeNameFieldProperty}" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
             <Label fx:id="ingredientsLabel" text="${controller.ingredientsProperty}" />
             <ComboBox fx:id="ingredientsComboBox" promptText="${controller.selectIngredientProperty}" HBox.hgrow="ALWAYS" />
             <Button fx:id="addIngredientButton" mnemonicParsing="false" onAction="#clickAddIngredient" text="+" />
         </children>
      </HBox>
       <ScrollPane fx:id="ingredientsScrollPane" hbarPolicy="NEVER" style="-fx-border-color: black; -fx-border-width: 0.5;" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="ingredientsList" spacing="2.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
             <Label fx:id="preparationLabel" text="${controller.preparationProperty}" />
            <TextArea fx:id="preparationField" prefRowCount="2" promptText="${controller.addPreparationStepProperty}" />
             <Button fx:id="addPreparationButton" mnemonicParsing="false" onAction="#clickAddPreparation" text="+" />
         </children>
      </HBox>
      <ScrollPane fx:id="preparationScrollPane" hbarPolicy="NEVER" prefHeight="90.0" prefWidth="275.0" style="-fx-border-color: black; -fx-border-width: 0.5;" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
             <VBox fx:id="preparationList" spacing="2.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="2.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
             <Label fx:id="servingSizeLabel" text="${controller.servingSizeProperty}" />
             <TextField fx:id="servingSizeField" promptText="${controller.portionsProperty}" />
             <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#clickCancel" text="${controller.cancelProperty}" />
             <Button fx:id="doneButton" mnemonicParsing="false" onAction="#clickDone" text="${controller.doneProperty}" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
