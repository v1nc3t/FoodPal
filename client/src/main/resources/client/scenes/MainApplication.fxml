<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.MainApplicationCtrl">
   <columnConstraints>
      <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="550.0" prefWidth="700.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <TextField fx:id="searchField" maxWidth="Infinity" onAction="#search" promptText="Search" />
               <ComboBox fx:id="languageOptions" minWidth="-Infinity" onAction="#changeLanguage" prefHeight="25.0" prefWidth="60.0" promptText="ðŸ³" />
               <ChoiceBox fx:id="orderBy" minWidth="-Infinity" />
               <ToggleButton fx:id="themeToggle" minWidth="-Infinity" mnemonicParsing="false" onAction="#toggleTheme" prefWidth="35.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
             <Label fx:id="showRecipesLabel" minWidth="-Infinity" prefHeight="25" text="${controller.showRecipesProperty}" />
                        <CheckBox fx:id="englishFilter" mnemonicParsing="false" prefHeight="25" text="${controller.englishProperty}" />
                    <CheckBox fx:id="germanFilter" mnemonicParsing="false" prefHeight="25" text="${controller.germanProperty}" />
             <CheckBox fx:id="dutchFilter" mnemonicParsing="false" prefHeight="25" text="${controller.dutchProperty}" />
            </HBox>
             <HBox alignment="CENTER_LEFT" spacing="10.0">
                 <Label fx:id="onlyShowFavouritesLabel" minWidth="-Infinity" prefHeight="25" text="${controller.onlyShowFavouritesProperty}" />
                 <CheckBox fx:id="onlyShowFavouritesToggle" mnemonicParsing="false" prefHeight="25" />
             </HBox>
             <HBox>
                 <ToggleButton fx:id="recipeToggleButton" minWidth="-Infinity" text="Recipes" />
                 <ToggleButton fx:id="ingredientToggleButton" minWidth="-Infinity" text="Ingredients" />
             </HBox>
              <ListView fx:id="sidebarListView" maxWidth="Infinity" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                    <Button fx:id="addButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#addRecipe" prefHeight="25.0" prefWidth="25.0" text="+" wrapText="true" />
                    <Button fx:id="removeButton" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="-" />
                    <Button fx:id="refreshButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#refresh" text="${controller.refreshProperty}" />
                    <Button fx:id="cloneButton" minWidth="-Infinity" mnemonicParsing="false" />
                    <Button fx:id="favouriteButton" minWidth="-Infinity" mnemonicParsing="false" />
                    <Button fx:id="shoppingListButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#showShoppingList" text="ðŸ›’" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <StackPane fx:id="contentPane" GridPane.columnIndex="1">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </StackPane>
   </children>
</GridPane>
