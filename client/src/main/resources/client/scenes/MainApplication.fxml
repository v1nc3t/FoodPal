<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.MainApplicationCtrl">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="70.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <TextField fx:id="searchField" maxWidth="Infinity" onAction="#search" promptText="Search" />
               <ChoiceBox fx:id="languageOptions" onAction="#changeLanguage" />
               <ChoiceBox fx:id="orderBy" />

            </HBox>
              <ListView fx:id="recipeListView" maxWidth="Infinity" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                    <Button fx:id="addButton" mnemonicParsing="false" onAction="#addRecipe" prefHeight="25.0" prefWidth="25.0" text="+" />
                    <Button fx:id="removeButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="-" />
                    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refresh" text="${controller.refreshProperty}" />
                    <Button fx:id="cloneButton" mnemonicParsing="false" text="Clone" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <StackPane fx:id="contentPane" GridPane.columnIndex="1">
         <HBox prefHeight="25" spacing="10.0">
            <Label fx:id="showRecipesLabel" prefHeight="25" text="${controller.showRecipesProperty}" />
            <CheckBox fx:id="englishFilter" prefHeight="25" mnemonicParsing="false" text="${controller.englishProperty}" />
            <CheckBox fx:id="germanFilter" prefHeight="25" mnemonicParsing="false" text="${controller.germanProperty}" />
            <CheckBox fx:id="dutchFilter" prefHeight="25" mnemonicParsing="false" text="${controller.dutchProperty}" />
         </HBox>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </StackPane>
   </children>
</GridPane>
