<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.MainApplicationCtrl">
   <left>
      <VBox prefWidth="220.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="searchField" maxWidth="Infinity" onAction="#search" promptText="Search" />
                  <ChoiceBox fx:id="orderBy" />
               </children>
            </HBox>
              <ListView fx:id="recipeListView" maxWidth="Infinity" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                    <Button fx:id="addButton" mnemonicParsing="false" onAction="#addRecipe" text="+" />
                    <Button fx:id="removeButton" mnemonicParsing="false" text="-" />
                    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refresh" text="${controller.refreshProperty}" />
                    <Button fx:id="cloneButton" mnemonicParsing="false" text="Clone" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentPane" style="-fx-background-color: #f4f4f4;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </StackPane>
   </center>
</BorderPane>
