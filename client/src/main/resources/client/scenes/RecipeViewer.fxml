<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.RecipeViewerCtrl">
   <top>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
             <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" minWidth="-Infinity" style="-fx-wrap-text: true;" text="${controller.recipeNameProperty}">
                 <font>
                     <Font size="14.0" />
                 </font>
             </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="12.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
             <Label fx:id="ingredientsLabel" minWidth="-Infinity" text="${controller.ingredientsProperty}" wrapText="true" />
            <Button fx:id="addToShoppingListButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#addToShoppingList" text="${controller.addToShoppingListProperty}" />
              <ListView fx:id="ingredientsList" VBox.vgrow="ALWAYS" />
             <Label fx:id="preparationLabel" minWidth="-Infinity" prefHeight="17.0" prefWidth="200.0" text="${controller.preparationProperty}" />
              <ListView fx:id="preparationList" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
   <bottom>
       <HBox alignment="CENTER_LEFT" spacing="10.0">
           <children>
               <Label fx:id="languageLabel" minWidth="-Infinity" text="${controller.languageProperty}" />
               <Label fx:id="languageSuffixLabel" minWidth="-Infinity" text="${controller.languageSuffixProperty}" />
               <Region HBox.hgrow="ALWAYS" />
               <Label fx:id="portionsLabel" minWidth="-Infinity" text="${controller.portionsProperty}" />
               <Label fx:id="portionsValueLabel" minWidth="-Infinity" text="${controller.portionsValueProperty}" />
               <Button fx:id="scaleUpButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#scaleUpRecipe" text="+">
                   <BorderPane.margin>
                       <Insets bottom="10.0" left="10.0" right="10.0" />
                   </BorderPane.margin>
               </Button>
               <Button fx:id="scaleDownButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#scaleDownRecipe" text="-">
                   <BorderPane.margin>
                       <Insets bottom="10.0" left="10.0" right="10.0" />
                   </BorderPane.margin>
               </Button>
               <Button fx:id="resetScaleButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#resetScale" text="${controller.resetProperty}">
                   <BorderPane.margin>
                       <Insets bottom="10.0" left="10.0" right="10.0" />
                   </BorderPane.margin>
               </Button>
               <Label fx:id="servingSizeLabel" minWidth="-Infinity" text="${controller.servingSizeProperty}" />
               <Label fx:id="caloriesLabel" minWidth="-Infinity" />
               <Button fx:id="printButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#printRecipe" />
               <Button fx:id="editButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#editRecipe">
                   <BorderPane.margin>
                       <Insets bottom="10.0" left="10.0" right="10.0" />
                   </BorderPane.margin>
               </Button>
           </children>
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
       </HBox>
   </bottom>
</BorderPane>
