<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.IngredientViewerCtrl">
    <top>
        <VBox alignment="CENTER_LEFT">
            <HBox alignment="CENTER" spacing="10.0">
                <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" style="-fx-wrap-text: true;">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
            </HBox>
            <Label fx:id="nutritionalValueLabel">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <HBox>
                <Label fx:id="proteinLabel" />
                <Text fx:id="proteinValue" styleClass="value-text"/>
            </HBox>
            <HBox>
                <Label fx:id="fatLabel" />
                <Text fx:id="fatValue" styleClass="value-text"/>
            </HBox>
            <HBox>
                <Label fx:id="carbsLabel" />
                <Text fx:id="carbsValue" styleClass="value-text" />
            </HBox>
            <HBox>
                <Label fx:id="kcalEstimateLabel" alignment="CENTER" contentDisplay="CENTER" style="-fx-wrap-text: true;" />
                <Text fx:id="kcalEstimateValue" styleClass="value-text"/>
            </HBox>
            <HBox>
                <Label fx:id="usedInRecipesLabel" alignment="CENTER" contentDisplay="CENTER" style="-fx-wrap-text: true;" />
                <Text fx:id="usedInRecipesValue" styleClass="value-text" />
            </HBox>

        </VBox>
    </top>
    <bottom>
        <HBox>
            <Button fx:id="editButton" onAction="#clickEdit" />
        </HBox>
    </bottom>
</BorderPane>